<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/courses_top_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:tabTextColor="@android:color/white"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/courses_list"
                tools:context=".courses.CoursesFragment"
                >

            <include layout="@layout/course_card"/>

            <include layout="@layout/course_card"/>

            <include layout="@layout/course_card"/>

            <include layout="@layout/course_card"/>

            <include layout="@layout/course_card"/>

            <include layout="@layout/course_card"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/courses_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:elevation="@dimen/bar_elevation"
            app:itemIconTint="#FF536171"
            app:itemTextColor="#FF536171"
            app:menu="@menu/menu_bottom_navigation"
            android:background="@android:color/white"
            />
</LinearLayout>
